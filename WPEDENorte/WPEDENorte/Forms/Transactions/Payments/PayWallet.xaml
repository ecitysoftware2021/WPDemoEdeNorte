            <!--<Image
                Source="/Images/Buttons/b-Aceptar.png"
                Width="400"
                Margin="422,459.536,421,610"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"    
                    MouseDown="txt_valorConsignacion_TouchDown"
                Grid.ColumnSpan="2" Grid.Row="1" 
                />-->
        </Grid>

        <Grid
            Grid.Row="2"
            Grid.ColumnSpan="2"
            HorizontalAlignment="Center"
            VerticalAlignment="Bottom"
            Margin="0,0,0,200"
            >
            <Image 
                Source="/Images/Buttons/b-Salir.png"
                MouseDown="btnMenu_TouchDown"
                x:Name="btnMenu"
                HorizontalAlignment="Center" 
                VerticalAlignment="Bottom" 
                Height="80"/>
        </Grid>

    </Grid>


</Window>

